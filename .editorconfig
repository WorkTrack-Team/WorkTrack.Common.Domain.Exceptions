dotnet_diagnostic.WTI0002.severity = error
dotnet_diagnostic.WTI0004.severity = error
dotnet_diagnostic.WTI0006.severity = error
dotnet_diagnostic.WTI0007.severity = error
 
[tests/**/*.cs]
